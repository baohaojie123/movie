.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 0;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 20px;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20px;
  vertical-align: middle;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10px;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.post-like{
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
  display: flex;
  flex-direction: row;
}
.post-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  /* vertical-align: middle; */
}
.post-like-font{
  /* vertical-align: middle; */
  margin-right: 20px;
}